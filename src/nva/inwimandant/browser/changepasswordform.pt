<html metal:use-macro="context/main_template/macros/master"
      i18n:domain="sits.reporttool">
<body>

    <metal:block fill-slot="main">

      <div class="container">

        <div class="row">

          <div class="col-12 col-sm-9">

            <h1 class="documentFirstHeading" tal:content="context/title | nothing" />

            <p tal:condition="context/description | nothing" class="lead mt-5">
              <img class="icon" src="++theme++plonetheme.siguv/icons/siguv/dot.svg">
              <span tal:content="context/description"/>
            </p>

            <div id="content-core">

              <div id="form-input">
                <span tal:replace="structure view/contents" />
              </div>

            </div><!-- Content-Core -->

          </div><!-- Col -->

          <div class="col-sm-3 col-12">
            <div tal:replace="structure context/@@portlet-cards-view"/>
          </div>

        </div><!-- Row -->
      </div><!-- Container -->

    </metal:block>

</body>
</html>
